<div id="platforms">
  <div class="container">

    <h1 style="text-align: center;">Select Your Viewing Platforms</h1>

    <div class="row">
      <div class="col s2">
        <div class="platform-icon">
          <img class="icon bottom" src="img/platforms/icons8-amazon-100-blue.png">
          <img class="icon top" src="img/platforms/icons8-amazon-100.png" alt="amazon logo" data-state="default"
            data-default="img/platforms/icons8-amazon-100.png" data-selected="img/platforms/icons8-amazon-100-blue.png"
            name="Amazon Instant Video">

        </div>
      </div>

      <div class="col s2">
        <div class="platform-icon">
          <img class="icon bottom" src="img/platforms/icons8-apple-tv-100-white-outline-blue.png">
          <img class="icon top" src="img/platforms/icons8-apple-tv-100-white-outline.png" alt="apple tv logo"
            data-state="default" data-default="img/platforms/icons8-apple-tv-100-white-outline.png"
            data-selected="img/platforms/icons8-apple-tv-100-white-outline-blue.png" name="iTunes">
        </div>
      </div>

      <div class="col s2">
        <div class="platform-icon">
          <img class="icon bottom" src="img/platforms/icons8-animation-100-blue.png">
          <img class="icon top" src="img/platforms/icons8-animation-100-white.png" alt="disney logo"
            data-state="default" data-default="img/platforms/icons8-animation-100-white.png"
            data-selected="img/platforms/icons8-animation-100-blue.png" name="Disney Plus">
        </div>
      </div>

      <div class="col s2">
        <div class="platform-icon">
          <img class="icon bottom" src="img/platforms/icons8-google-play-100-white-outline-blue.png">
          <img class="icon top" src="img/platforms/icons8-google-play-100-white-outline.png" alt="google play logo"
            data-state="default" data-default="img/platforms/icons8-google-play-100-white-outline.png"
            data-selected="img/platforms/icons8-google-play-100-white-outline-blue.png" name="GooglePlay">
        </div>
      </div>

      <div class="col s2">
        <div class="platform-icon">
          <img class="icon bottom" src="img/platforms/icons8-hulu-100-blue.png">
          <img class="icon top" src="img/platforms/icons8-hulu-100-white.png" alt="hulu logo" data-state="default"
            data-default="img/platforms/icons8-hulu-100-white.png"
            data-selected="img/platforms/icons8-hulu-100-blue.png" name="Hulu">
        </div>
      </div>

      <div class="col s2">
        <div class="platform-icon">
          <img class="icon bottom" src="img/platforms/icons8-netflix-100-blue.png">
          <img class="icon top" src="img/platforms/icons8-netflix-100.png" alt="netflix logo" data-state="default"
            data-default="img/platforms/icons8-netflix-100.png"
            data-selected="img/platforms/icons8-netflix-100-blue.png" name="Netflix">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s2">
        <p class="platform-name">Amazon Prime</p>
      </div>
      <div class="col s2">
        <p class="platform-name">Apple TV+</p>
      </div>
      <div class="col s2">
        <p class="platform-name">Disney+</p>
      </div>
      <div class="col s2">
        <p class="platform-name">Google Play</p>
      </div>
      <div class="col s2">
        <p class="platform-name">Hulu</p>
      </div>
      <div class="col s2">
        <p class="platform-name">Netflix</p>
      </div>
    </div>


